<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <Button
        android:id="@+id/main_btn_search"
        style="@style/ActionButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/kghostview"
        android:onClick="onButtonClick"
        android:text="@string/title_search"
        app:layout_constraintBottom_toTopOf="@+id/account_btn_check_out"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/account_btn_check_out"
        style="@style/ActionButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/items_checked_out"
        android:onClick="onButtonClick"
        android:text="@string/title_check_out"
        app:layout_constraintBottom_toTopOf="@+id/account_btn_holds"
        app:layout_constraintTop_toBottomOf="@+id/main_btn_search"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        style="@style/ActionButton"
        android:text="@string/title_holds"
        android:id="@+id/account_btn_holds"
        android:onClick="onButtonClick"
        android:drawableLeft="@drawable/holds"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/account_btn_check_out"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toTopOf="@+id/account_btn_fines" />

    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        style="@style/ActionButton"
        android:text="@string/title_fines"
        android:id="@+id/account_btn_fines"
        android:onClick="onButtonClick"
        android:drawableLeft="@drawable/fines"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/account_btn_holds"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toTopOf="@+id/main_my_lists_button" />

    <Button
        android:id="@+id/main_my_lists_button"
        style="@style/ActionButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/beos_write"
        android:onClick="onButtonClick"
        android:text="@string/title_my_lists"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/account_btn_fines"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toTopOf="@+id/main_barcode_button" />

    <Button
        android:id="@+id/main_barcode_button"
        style="@style/ActionButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/barcode"
        android:onClick="onButtonClick"
        android:text="@string/barcode_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_my_lists_button" />

    <LinearLayout
        android:id="@+id/linearLayout"
        style="?android:buttonBarStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <Button
            android:id="@+id/open_full_catalog_button"
            style="?android:buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onButtonClick"
            android:text="@string/title_open_full_catalog" />

        <Button
            android:id="@+id/library_locator_button"
            style="?android:buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onButtonClick"
            android:text="@string/title_library_locator" />

        <Button
            android:id="@+id/patron_message_center"
            style="?android:buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onButtonClick"
            android:text="@string/title_patron_message_center" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>