<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="textSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingTop">4dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textMediumNoPadding">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textLargeNoPadding">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textSplash">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="spacer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">14dip</item>
    </style>

    <style name="BigActionButton">
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginTop">@dimen/bigActionButton_marginVertical</item>
        <item name="android:layout_marginBottom">@dimen/bigActionButton_marginVertical</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/action_button</item>
    </style>

    <style name="ActionButton">
        <item name="android:padding">0dip</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/action_button</item>
    </style>

    <style name="TitleSearchStyleList">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <!--
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        -->
    </style>

    <style name="AuthorSearchStyleList">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PubSearchStyleList">
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <!-- Tabs -->

    <style name="StyledIndicators" parent="@style/Theme.AppCompat">
        <item name="vpiUnderlinePageIndicatorStyle">@style/CustomUnderlinePageIndicator</item>
    </style>

    <style name="CustomUnderlinePageIndicator">
        <item name="selectedColor">#FFCC0000</item>
        <!--<item name="android:background">#FFCCCCCC</item>-->
        <item name="android:background">#FFff0000</item>
        <item name="fadeLength">1000</item>
        <item name="fadeDelay">1000</item>
    </style>

    <style name="Content">
        <item name="android:layout_marginTop">5dip</item>
    </style>

    <style name="ApplicationButton" parent="Base.Widget.AppCompat.Button">
        <!--<item name="android:textColor">@color/white</item>-->
        <!--<item name="android:background">@drawable/application_button</item>-->
        <!--<item name="android:padding">5dp</item>-->
        <item name="android:singleLine">true</item>
    </style>

    <style name="SecondaryToolbar"><!-- parent="Base.ThemeOverlay.AppCompat.ActionBar" -->
        <item name="android:elevation" tools:targetApi="lollipop">3dp</item>
        <item name="android:background">@color/material_grey_800</item>
    </style>

    <style name="Hemlock.ActionButton" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Missing material colors from https://material.google.com/style/color.html#color-color-palette -->
    <color name="material_grey_200">#EEEEEE</color>
    <color name="material_grey_400">#BDBDBD</color>
    <color name="material_grey_500">#9E9E9E</color>
    <color name="material_grey_700">#616161</color>

    <color name="hemlock_accent_material">@color/accent_material_dark</color>
    <color name="hemlock_accent_halloween">#ff9100</color>
    <color name="hemlock_accent">#ff9100</color>
    <color name="hemlock_text_alert">#ff9100</color>

    <color name="logo_background">@color/background_material_dark</color>

    <!--<color name="primary">@color/primary_material_dark</color>-->
    <!--<color name="primary_dark">@color/primary_dark_material_dark</color>-->
    <!--<color name="accent">#76FF03</color>-->
    <color name="primary">@color/primary_material_dark</color>
    <color name="primary_dark">@color/primary_dark_material_dark</color>
    <color name="accent">#76ff03</color>

    <style name="HemlockDark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/hemlock_accent</item>
    </style>

    <style name="HemlockDarkNoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/hemlock_accent</item>
    </style>

    <style name="HemlockLightNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/hemlock_accent</item>
    </style>

    <style name="alertText">
        <item name="android:textColor">@color/hemlock_text_alert</item>
    </style>

    <style name="HemlockProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorPrimaryDark">@color/accent</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Hemlock.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="HemlockDarkNoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PrimaryFlatButton" parent="HemlockDark">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@color/hemlock_accent</item>
        <item name="colorAccent">@color/primary</item>
    </style>

</resources>
