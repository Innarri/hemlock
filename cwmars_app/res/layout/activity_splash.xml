<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

    <ImageView
            android:id="@+id/logo"
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:src="@drawable/cwmars_logo_white"
            android:contentDescription="@string/ou_library_name"
            android:padding="4dip"
            android:layout_above="@+id/action_in_progress"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="75dp"/>

    <TextView
            android:id="@+id/action_in_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/textLarge"
            tools:text="Signing in" android:padding="4dip"
            android:layout_centerInParent="true"/>

    <ProgressBar
            android:id="@+id/activity_splash_progress_bar"
            style="@style/HemlockProgressBar"
            android:indeterminate="true"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:padding="6dip"
            android:layout_below="@+id/action_in_progress" android:layout_centerHorizontal="true"/>

    <Button
            android:id="@+id/activity_splash_retry_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dip"
            android:text="@string/retry_label"
            android:paddingLeft="25dip"
            android:paddingRight="25dip"
            android:visibility="visible"
            android:layout_alignParentBottom="true" android:layout_marginBottom="60dip"/>

</RelativeLayout>
