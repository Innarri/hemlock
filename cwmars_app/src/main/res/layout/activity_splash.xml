<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/splash_title"
            android:tint="@color/hemlock_accent"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="24dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout">
    <TextView
            android:id="@+id/action_in_progress"
                android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                style="@style/textSplash"
                tools:text="Signing in"
                android:padding="4dip"
                android:layout_gravity="center_horizontal" android:alpha="1"/>
    <ProgressBar
            android:id="@+id/activity_splash_progress_bar"
            style="@style/HemlockProgressBar"
            android:indeterminate="true"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" android:alpha="1.0"
                android:padding="6dp" android:layout_marginLeft="12dp" android:layout_marginRight="12dp"/>
    </LinearLayout>
    <Button
            android:id="@+id/activity_splash_retry_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dip"
            android:text="@string/retry_label"
            android:paddingLeft="25dip"
            android:paddingRight="25dip"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dip"
            android:layout_alignParentTop="false"/>


</RelativeLayout>
